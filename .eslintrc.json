{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "prettier/standard",
        "prettier/react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "react/prop-types": "off",
        "no-console": "warn",
        "prettier/prettier": "error",
        "space-before-function-paren": "off",
        "max-lines": "error"
    },
    "settings": {
        "react": {
            "version": "latest"
        }
    }
}